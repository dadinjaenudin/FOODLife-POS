# Django settings for Edge Server
SECRET_KEY=django-insecure-edge-server-development-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=*

# Database - PostgreSQL (Edge Server)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=fnb_edge_db
DB_USER=postgres
DB_PASSWORD=postgres123
DB_HOST=edge_db
DB_PORT=5432

# Redis - Edge Server
REDIS_URL=redis://edge_redis:6379/0

# Celery - Edge Server
CELERY_BROKER_URL=redis://edge_redis:6379/0
CELERY_RESULT_BACKEND=redis://edge_redis:6379/0

# Application
ENVIRONMENT=edge_development
TIME_ZONE=Asia/Jakarta
LANGUAGE_CODE=id

# Base URL
BASE_URL=http://localhost:8001

# Print Agent Settings
PRINT_AGENT_AUTH_REQUIRED=False
PRINT_AGENT_API_KEY=edge-server-api-key-here

# Edge Server Identification
EDGE_SERVER_MODE=True
EDGE_SERVER_NAME=Edge Server - Development

# HO Server Sync Configuration
# Use host.docker.internal to access HO server from Edge container
# host.docker.internal allows Docker containers to connect to services on host machine
HO_API_URL=http://fnb_ho_web:8000
HO_API_USERNAME=admin
HO_API_PASSWORD=admin123
SYNC_INTERVAL_HOURS=6


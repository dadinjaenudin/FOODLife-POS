{% extends 'base.html' %}
{% load static %}

{% block title %}Table Management - POS F&B{% endblock %}

{% block content %}
<div class="min-h-screen bg-gray-100">
    <!-- Header -->
    <div class="bg-white shadow-sm border-b sticky top-0 z-10">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-4">
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">Table Management</h1>
                    <p class="text-sm text-gray-500">Manage table status and reservations</p>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="{% url 'pos:main' %}" class="btn-touch bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600">
                        Back to POS
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <!-- Table Areas -->
        {% if areas %}
            {% for area in areas %}
            <div class="mb-8">
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">{{ area.name }}</h2>
                    
                    <!-- Tables Grid -->
                    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
                        {% for table in area.tables.all %}
                        <div class="relative">
                            <form method="POST" action="{% url 'tables:open_table' table.id %}">
                                {% csrf_token %}
                                <button 
                                    type="submit"
                                    {% if table.status != 'available' %}disabled{% endif %}
                                    class="w-full p-6 rounded-lg border-2 transition-all {% if table.status == 'available' %}border-green-500 bg-green-50 hover:bg-green-100{% elif table.status == 'occupied' %}border-red-500 bg-red-50 cursor-not-allowed{% elif table.status == 'reserved' %}border-yellow-500 bg-yellow-50{% elif table.status == 'dirty' %}border-gray-400 bg-gray-100{% else %}border-blue-500 bg-blue-50{% endif %}"
                                >
                                    <div class="text-center">
                                        <div class="text-2xl font-bold mb-1">{{ table.number }}</div>
                                        <div class="text-sm text-gray-600">
                                            <svg class="w-4 h-4 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                            </svg>
                                            {{ table.capacity }}
                                        </div>
                                        <div class="mt-2">
                                            <span class="inline-block px-2 py-1 text-xs rounded {% if table.status == 'available' %}bg-green-200 text-green-800{% elif table.status == 'occupied' %}bg-red-200 text-red-800{% elif table.status == 'reserved' %}bg-yellow-200 text-yellow-800{% elif table.status == 'dirty' %}bg-gray-300 text-gray-800{% else %}bg-blue-200 text-blue-800{% endif %}">
                                                {{ table.get_status_display }}
                                            </span>
                                        </div>
                                    </div>
                                </button>
                            </form>
                            
                            {% if table.status == 'occupied' %}
                            <div class="absolute -top-2 -right-2">
                                <span class="flex h-6 w-6">
                                    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"></span>
                                    <span class="relative inline-flex rounded-full h-6 w-6 bg-red-500"></span>
                                </span>
                            </div>
                            {% endif %}
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endfor %}
        {% else %}
            <!-- No tables message -->
            <div class="bg-white rounded-lg shadow-sm p-12 text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
                <h3 class="mt-2 text-lg font-medium text-gray-900">No tables configured</h3>
                <p class="mt-1 text-sm text-gray-500">Get started by creating table areas and tables in the admin panel.</p>
                <div class="mt-6">
                    <a href="{% url 'admin:tables_tablearea_changelist' %}" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                        Go to Admin
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
</div>

<!-- Status Legend -->
<div class="fixed bottom-4 right-4 bg-white rounded-lg shadow-lg p-4">
    <h3 class="text-sm font-semibold text-gray-700 mb-2">Status Legend</h3>
    <div class="space-y-1 text-xs">
        <div class="flex items-center">
            <div class="w-4 h-4 bg-green-500 rounded mr-2"></div>
            <span>Available</span>
        </div>
        <div class="flex items-center">
            <div class="w-4 h-4 bg-red-500 rounded mr-2"></div>
            <span>Occupied</span>
        </div>
        <div class="flex items-center">
            <div class="w-4 h-4 bg-yellow-500 rounded mr-2"></div>
            <span>Reserved</span>
        </div>
        <div class="flex items-center">
            <div class="w-4 h-4 bg-blue-500 rounded mr-2"></div>
            <span>Billing</span>
        </div>
        <div class="flex items-center">
            <div class="w-4 h-4 bg-gray-400 rounded mr-2"></div>
            <span>Needs Cleaning</span>
        </div>
    </div>
</div>
{% endblock %}
